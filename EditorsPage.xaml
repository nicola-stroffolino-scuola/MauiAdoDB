<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADO_SQLITE.EditorsPage"
             Title="Lista degli Editori">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0"
                   Text="Id"
                   BackgroundColor="#142133"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontFamily="TorusPro"
                   FontSize="15"/>
            <Label Grid.Column="1"
                   Text="Nome"
                   BackgroundColor="#1B263B"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontFamily="TorusPro"
                   FontSize="15"/>
            <Label Grid.Column="2"
                   Text="Titoli Pubblicati"
                   BackgroundColor="#202D43"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontFamily="TorusPro"
                   FontSize="15"/>
        </Grid>

        <CollectionView x:Name="EditorsDisplay" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="1"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Text="{Binding Id}" 
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               FontFamily="TorusPro"
                               FontSize="15"/>
                        <Label Grid.Column="1" Text="{Binding Nome}" 
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               FontFamily="TorusPro"
                               FontSize="15"/>
                        <Label Grid.Column="2" Text="{Binding Titoli}" 
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               FontFamily="TorusPro"
                               FontSize="15"
                               Padding="10"/>
                        <BoxView Grid.Row="1" Grid.ColumnSpan="3"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
